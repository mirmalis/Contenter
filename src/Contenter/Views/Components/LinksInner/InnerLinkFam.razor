@code
{
  [EditorRequired]
  [Parameter]
  public FamView? Model { get; set; } = default!;

  [Parameter]
  public bool After { get; set; } = false;
}
@if(this.Model != null)
{
  <AnchorBase
    href=@($"/c/fam/{this.Model.Id}")
    Text=@this.Model.Name
    />
  @if (this.After)
  {
    <text> &raquo; </text>
  }
}
