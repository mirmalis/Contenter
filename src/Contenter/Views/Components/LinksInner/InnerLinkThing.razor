@code {
  [EditorRequired]
  [Parameter]
  public ThingView? Model { get; set; }

  [Parameter]
  public bool NoDefinition { get; set; }
}
@if (this.Model != null)
{
  if(!this.NoDefinition && this.Model.Definition != null)
  {
    <text>
      @(this.Model.Definition.Name): 
    </text>
  }
  <AnchorBase
    href=@($"/o/t/{this.Model.Id}")
    Text=@this.Model.Name
  />
}
