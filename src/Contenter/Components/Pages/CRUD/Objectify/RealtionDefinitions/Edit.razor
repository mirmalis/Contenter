@inherits _Editor<RelationDefinition, Guid>
@page "/edit/o/rd/{id:guid}"
@rendermode InteractiveServer

@code {
  protected override IQueryable<RelationDefinition> Includer(IQueryable<RelationDefinition> dbset)
  {
    return base.Includer(dbset)
    .Include(item => item.From)
    .Include(item => item.To)
    ;
  }
}

<h3>Edit RelationDefinition</h3>
@if (this.model != null)
{
  <_Bind model=@this.model OnValidSubmitCallback=@this.DoUpdate>
    Save
  </_Bind>
}
