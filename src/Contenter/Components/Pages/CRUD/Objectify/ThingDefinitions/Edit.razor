@inherits _Editor<ThingDefinition, Guid>
@page "/edit/o/td/{id:guid}"
@rendermode InteractiveServer

@code {
  protected override IQueryable<ThingDefinition> Includer(IQueryable<ThingDefinition> dbset)
  {
    return base.Includer(dbset)
    .Include(item => item.Scope)
    ;
  }
}

<h3>Edit ThingDefinition</h3>
@if (this.model != null)
{
  <_Bind model=@this.model OnValidSubmitCallback=@this.DoUpdate>
    Save
  </_Bind>
}
