@page "/s/sources/{id:guid}"
@attribute [Microsoft.AspNetCore.Authorization.AllowAnonymous]
@rendermode InteractiveServer
@code {
  [Parameter]
  public Guid Id { get; set; }
}
<FluentLabel Typo=@Typography.H5>
  Source
</FluentLabel>
<_Display Id=@this.Id />

<AuthorizeView Policy="AdminSuper">
  <Authorized>
    <div>
      <a href="/edit/s/sources/@this.Id">Edit</a>
      |
      <a href="/delete/s/sources/@this.Id">Delete</a>
    </div>
  </Authorized>
</AuthorizeView>
