@page "/create/p/personas"
@attribute [Microsoft.AspNetCore.Authorization.AllowAnonymous]
@rendermode InteractiveServer
@code
{
  [SupplyParameterFromQuery]
  public bool BackToContentCreation { get; set; } = false;
}
@inject NavigationManager navigationManager
<_Create
  OnAfterSave=@(async (Contenter.Models.Persons.Persona model) => {
    if(this.BackToContentCreation){
         this.navigationManager.NavigateTo($"/create/c/contents");
    } else {
      this.navigationManager.NavigateTo($"/p/personas/{model.Id}");
    }
  })>
  Create
</_Create>
