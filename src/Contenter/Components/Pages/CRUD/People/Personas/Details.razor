@page "/p/personas/{id:guid}"
@attribute [Microsoft.AspNetCore.Authorization.AllowAnonymous]
@code {
  [Parameter]
  public Guid Id { get; set; }
}
<FluentLabel Typo=@Typography.H5>
  Persona
</FluentLabel>
<AuthorizeView Policy="AdminSuper">
  <Authorized>
    <div>
      <a href="/edit/p/personas/@this.Id">Edit</a>
      |
      <a href="/delete/p/personas/@this.Id">Delete</a>
    </div>
  </Authorized>
</AuthorizeView>
<_Display Id=@this.Id />
